extends layout

block content
    script(src='/javascripts/narracao.js')
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue
                h3 Narracao
            .w3-container
                form#myForm.w3-container(action ="/pubs/narracao" name="narracao" enctype="multipart/form-data" method="POST")
                    table
                        tr
                            td(style='width:50%')
                                label
                                    b Username
                                input#username.w3-input.w3-border.w3-light-grey(type='text' name='username' required)
                                label
                                    b Titulo
                                input#titulo.w3-input.w3-border.w3-light-grey(type='text' name='titulo')
                                label
                                    b Texto
                                input#texto.w3-input.w3-border.w3-light-grey(type='text' name='texto' required)
                                br
                                label 
                                    b Autor
                                input#autor.w3-input.w3-border.w3-light-grey(type='text' name='autor' required)
                                label 
                                    b Ficheiro
                                input#ficheiro.w3-input.w3-border.w3-light-grey(type='file' name='files')

                    input.w3-btn.w3-blue(type='submit' value='Enviar' style='margin-left:25px;')
                    a(href="/pubs") Voltar à lista de ficheiros
                    br
            footer.w3-container.w3-blue(style="text-align: center;")
                address Powered by Desenvolvimento de Aplicações Web