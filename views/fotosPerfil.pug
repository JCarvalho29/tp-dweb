extends layout

block content
	#inicioPagina

		.w3-container
			.w3-card-4
				header.w3-container.w3-blue
					h3 Fotos de Perfil
				.w3-container(style=" width: 50%; float: left;")
					ul
						for file in fotos.fotoPerfil.fotos
							li
								a(href="http://localhost:3000/api/files/foto?userId=" + fotos.userid + "&fotoId=" + file._id)
									img(src="http://localhost:3000/api/files/foto?userId=" + fotos.userid + "&fotoId=" + file._id)
					
					input.w3-btn.w3-blue(type='submit' value='Enviar' style='margin-left:25px; margin-top:10px')
					input.w3-btn.w3-blue(type='reset' value='Limpar' style='margin-left:25px; margin-top:10px')
					input.w3-btn.w3-blue(id='AdicaoFicheiros' value='Adicionar Ficheiros ao Evento' style='margin-left:25px; margin-top:10px')
	br
	br
	a(href="/pubs") Voltar ao Feed
	br
	br
	footer.w3-container.w3-blue(style="text-align: center;")
		address Powered by Desenvolvimento de Aplicações Web
		
	script(src="/javascripts/evento.js")