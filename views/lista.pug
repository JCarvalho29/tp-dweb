extends layout

block content
    #inicioPagina

        .w3-container
            .w3-card-4
                header.w3-container.w3-blue
                    h3 Adicionar Lista
                form.w3-container(id='ListaForm' name="ListaForm" enctype="multipart/form-data" method="post")
                    .w3-container(style="width: 50%;")
                        fieldset(id="inputs")
                            legend Preencha os campos abaixo!
                            input.w3-input(id="username" type="text" placeholder = "Username")
                            input.w3-input(id="titulo" type="text" placeholder = "Título da Lista")
                            input.w3-input(id="item1" type="text" placeholder = "Item da Lista")

                    input.w3-btn.w3-blue(type = "button" id = "adicionarLinha" value = "Adicionar novo item" style='margin-left:25px; margin-top:10px')                        
                    input.w3-btn.w3-blue(id="enviar" type='submit' value='Enviar' style='margin-left:25px; margin-top:10px')
                    input.w3-btn.w3-blue(type='reset' value='Limpar' style='margin-left:25px; margin-top:10px')
                    input.w3-btn.w3-blue(id='AdicaoFicheiros' value='Adicionar Ficheiros ao Evento' style='margin-left:25px; margin-top:10px')
                    
                    .w3-container(id="filesDiv" style='visibility: hidden; width: 50%; float: right; margin-top: 25px')
                        .w3-card-4(style='width: 80%')
                            header.w3-container.w3-blue
                                h3 Adicionar Ficheiros
                            table
                                tr
                                    td
                                        label
                                            b Titulo
                                        input.w3-input.w3-border.w3-light-grey(id='filesTitulo' type='text' name='fTitulo')
                                        br
                                        label
                                            b Ficheiros
                                        #listaFiles
                                            input.w3-input.w3-border.w3-light-grey(type='file' name='files0' multiple)
                                        br
                                        input.w3-btn.w3-border(id='more_files' type='button' value='Mais ficheiros' style='font-size:8px;')
                                        br
                            input.w3-btn.w3-blue(id='cancelarAdicaoFicheiros' value='Cancelar Adição de Ficheiros' style='margin-right:25px;')
                    
				lable 
					b Quem pretende que veja a sua publicação?
					br
					lable Público
						input(id="publica" type='checkbox' name='agreement' style='margin-left: 22px'  unchecked)
					br
					label Seguidores
						input(id="seguidores" type='checkbox' name='agreement' style='margin-left: 20px' unchecked)
					br
					label Apenas Eu
						input(id="privada" type='checkbox' name='agreement' style='margin-left: 20px' checked)

                br
                br
                a(href="/pubs") Voltar ao Feed
                br
                br
                footer.w3-container.w3-blue(style="text-align: center;")
                    address Powered by Desenvolvimento de Aplicações Web
         
    script(src='/javascripts/lista.js')