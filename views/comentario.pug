tr.comentarioDiv(id=comentario._id)
    td(valign='top' width='50px')
        a(href="http://localhost:3000/Perfil?idUser=" + comentario.utilizador._id)
            img.w3-round-xxlarge(style="max-width: 45px; max-height: 45px;margin-right: 20px;" src="http://localhost:3000/api/files/foto?userId=" + comentario.utilizador._id + "&fotoId=" + comentario.utilizador.fotoPerfil.idAtual)
    td
        .w3-border.w3-round-xxlarge.w3-light-grey(style='margin-top:5px; margin-bottom:5px; word-wrap: break-word')
            p(style='margin-left:15px; margin-right:15px; margin-top:7px; margin-bottom:7px;')
                b(style='color: rgb(59,100,170);')= comentario.utilizador.nome
                | &nbsp;&nbsp;&nbsp; #{comentario.texto}
        input.commentLike.w3-btn.w3-small.w3-round-xxlarge(type='button' id=comentario._id+"_Gosto" value='Gosto (' + comentario.gostos.length + ')' name=comentario.gostos.length style='line-height: 14px; margin-bottom:10px;background-color: rgb(59,100,170); color: white; margin-left:15px;')