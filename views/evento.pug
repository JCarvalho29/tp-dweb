extends layout

block content
	#inicioPagina

		.w3-container
			.w3-card-4
				header.w3-container.w3-blue
					h3 Submeter ficheiros
				form.w3-container(id='EventoForm' name="EventoForm" enctype="multipart/form-data" method="post")
					.w3-container
						table
							tr 
								th Username
								th Título
								th Atividade
								th Duração
								th Descricção
								th Data de Realização
							tr
								td
									input.w3-input.w3-border.w3-light-grey(id='username' type='text' name='username' required)
								td
									input.w3-input.w3-border.w3-light-grey(id='titulo' type='text' name='titulo' required)
								td
									input.w3-input.w3-border.w3-light-grey(id='atividade' type='text' name='atividade' required)
								td
									input.w3-input.w3-border.w3-light-grey(id='duracao' type='text' name='duracao')
								td
									input.w3-input.w3-border.w3-light-grey(id='descricao' type='text' name='descricao' required)
								td
									input.w3-input.w3-border.w3-light-grey(id='data' type='text' name='data' required)

					.w3-container
								table
									tr
										td(style='width:50%')
											label

											label
												b Titulo
											input.w3-input.w3-border.w3-light-grey(id='filesTitulo' type='text' name='fTitulo')
											br
											label
												b Ficheiros
											#listaFiles
												input.w3-input.w3-border.w3-light-grey(type='file' name='files0' multiple)
											br
											input.w3-btn.w3-border(id='more_files' type='button' value='Mais ficheiros' style='font-size:8px;')
											br

										td(style='width:50%')

											input.w3-btn.w3-blue(type='submit' value='Enviar' style='margin-left:25px;')
											input.w3-btn.w3-blue(type='reset' value='Limpar' style='margin-left:25px;')
				br
				br
				a(href="/pubs") Voltar à lista de ficheiros
				br
				br
				footer.w3-container.w3-blue(style="text-align: center;")
					address Powered by Desenvolvimento de Aplicações Web
		
		script(src="/javascripts/evento.js")