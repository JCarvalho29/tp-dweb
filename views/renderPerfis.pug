if (users.aSeguir)
	.w3-card-4
		header.w3-container.w3-round-large(style='height:50px; background-color: rgb(59,100,170); color: white;')
			h4(style='text-align: center; margin-top:5px;') A seguir
		.w3-container
			for user in users.aSeguir
				img(style="max-width: 250px; max-height: 250px; margin-top: 25px;margin-right: 20px;vertical-align: middle;" src="http://localhost:3000/api/files/fotoPerfil?uid=" + user._id + "&username=" + user.username)
		br
else
	.w3-card-4
